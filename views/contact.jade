extends layout

block content
  .container
    form(method="post", action="contact/send")
      h1 Contact
      .form-group
        label Name
        input.form-control(type="text", name="name", placeholder="Ingresa Nombre")
      .form-group
        label Email
        input.form-control(type="text", name="email", placeholder="Ingresa tu correo")
      .form-group
        label Mensaje
        textarea.form-control(name="mensaje", placeholder="Ingresa tu mensaje")
      button.btn.btn-default(type="submit") Enviar
